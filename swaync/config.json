{
    "$schema": "/etc/xdg/swaync/configSchema.json",

    "positionX": "right",
    "positionY": "top",
    "layer": "overlay",
    "layer-shell": true,

    "control-center-layer": "top",
    "control-center-margin-top": 2,
    "control-center-margin-bottom": 5,
    "control-center-margin-right": 1,

    "timeout": 6,

    "widgets": [
        "mpris",
        "title",
        "dnd",
        "notifications"
    ],

    "widget-config": {
        "mpris":{
            "show-album-art": "always"
        }
    }
}
